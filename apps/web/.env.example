# ==============================================
# FleetAI Environment Variables - Example
# ==============================================
# Copy this file to .env.local for development
# Never commit actual values to version control

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgres://username:password@localhost:5432/database_name"

# ==============================================
# CLERK AUTHENTICATION
# ==============================================
CLERK_SECRET_KEY="sk_test_your_secret_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL="/dashboard"
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL="/dashboard"
NEXT_PUBLIC_CLERK_FRONTEND_API_URL="https://your-app.clerk.accounts.dev"

# ==============================================
# STRIPE
# ==============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==============================================
# API CONFIGURATION
# ==============================================
# Next.js frontend
NEXT_PUBLIC_APP_URL=http://localhost:3000

# FastAPI backend - for direct frontend calls
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# FastAPI backend - for server-side calls from Next.js API routes
BACKEND_URL=http://localhost:8000

# ==============================================
# AZURE INTEGRATION (Optional)
# ==============================================
NEXT_PUBLIC_AZURE_CLIENT_ID="your-azure-client-id"
NEXT_PUBLIC_AZURE_TENANT_ID="your-azure-tenant-id" 
NEXT_PUBLIC_AZURE_REDIRECT_URI="http://localhost:3000/auth/callback"

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV="development"
NEXT_PUBLIC_DEBUG_MODE=true
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"