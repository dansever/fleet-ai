# ==============================================
# FleetAI Environment Variables - Example
# ==============================================
# Copy this file to .env.local for development
# Never commit actual values to version control

# ==============================================
# DATABASE
# ==============================================
# Local Development (Docker)
DATABASE_URL="postgres://username:password@localhost:5432/database_name"
# Production example
# DATABASE_URL="postgresql://postgres:password@host:5432/database"

# ==============================================
# CLERK AUTHENTICATION
# ==============================================
CLERK_SECRET_KEY="sk_test_your_secret_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL="/dashboard"
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL="/dashboard"
NEXT_PUBLIC_CLERK_FRONTEND_API_URL="https://your-app.clerk.accounts.dev"

# ==============================================
# API CONFIGURATION
# ==============================================
# Next.js frontend runs on port 3000
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

# FastAPI backend runs on port 8000
BACKEND_URL="http://localhost:8000"
NEXT_PUBLIC_BACKEND_URL="http://localhost:8000"

# ==============================================
# AZURE INTEGRATION
# ==============================================
NEXT_PUBLIC_AZURE_CLIENT_ID="your-azure-client-id"
NEXT_PUBLIC_AZURE_TENANT_ID="your-azure-tenant-id"
NEXT_PUBLIC_AZURE_REDIRECT_URI="http://localhost:3000/auth/callback"

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV="development"
NEXT_PUBLIC_API_DEBUG="true"
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"